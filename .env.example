# ==================================================
# Supabase Configuration
# ==================================================

SUPABASE_URL=https://fthimebrhmafyqezefkd.supabase.co
SUPABASE_KEY=your-anon-key-here

# ==================================================
# Phase 1: GitHub Crawler Configuration
# ==================================================

# GitHub API Token (required)
CRAWLER_GITHUB_TOKEN=your-github-token-here

# Mode test (true = limited repos, false = all repos)
CRAWLER_TEST_MODE=true
CRAWLER_TEST_LIMIT=10

# File paths
CRAWLER_INPUT_FILE=data/input/top_200_mcp_servers.json
CRAWLER_OUTPUT_FILE=data/output/github_crawled_data.json

# Rate limiting
CRAWLER_GITHUB_RATE_LIMIT_BUFFER=500

# ==================================================
# Phase 2: LLM Extraction Configuration
# ==================================================

# ============================================================
# Provider Selection Guide
# ============================================================
#
# For Anthropic Claude:
#   EXTRACTOR_LLM_PROVIDER=anthropic
#   EXTRACTOR_ANTHROPIC_API_KEY=sk-ant-...
#   EXTRACTOR_MODEL=claude-sonnet-4-20250514
#
# For OpenRouter (DeepSeek):
#   EXTRACTOR_LLM_PROVIDER=openrouter
#   EXTRACTOR_OPENROUTER_API_KEY=sk-or-v1-...
#   EXTRACTOR_OPENROUTER_MODEL=deepseek/deepseek-v3.2-exp
#
# ============================================================

# LLM Provider Selection ("anthropic" or "openrouter")
# Default: anthropic (backward compatible)
EXTRACTOR_LLM_PROVIDER=anthropic

# Anthropic API (required if using anthropic provider)
EXTRACTOR_ANTHROPIC_API_KEY=your-anthropic-key-here

# OpenRouter API (required if using openrouter provider)
EXTRACTOR_OPENROUTER_API_KEY=sk-or-v1-your-key-here
EXTRACTOR_OPENROUTER_MODEL=deepseek/deepseek-v3.2-exp

# OpenRouter Optional Headers (for better rate limits)
# EXTRACTOR_OPENROUTER_SITE_URL=https://yourapp.com
# EXTRACTOR_OPENROUTER_APP_NAME=MCP Config Extractor

# Model settings
EXTRACTOR_MODEL=claude-sonnet-4-20250514  # Used when provider=anthropic
EXTRACTOR_MAX_TOKENS=4000
EXTRACTOR_TEMPERATURE=0.0
EXTRACTOR_TIMEOUT_SECONDS=30

# Processing settings
EXTRACTOR_TEST_MODE=True
EXTRACTOR_TEST_LIMIT=10
EXTRACTOR_BATCH_SIZE=5

# Validation thresholds
EXTRACTOR_AUTO_APPROVE_THRESHOLD=0.9
EXTRACTOR_NEEDS_REVIEW_THRESHOLD=0.7

# File paths
EXTRACTOR_INPUT_FILE=data/output/github_crawled_data.json
EXTRACTOR_OUTPUT_FILE=data/output/extracted_configs.json
EXTRACTOR_PROMPT_TEMPLATE_FILE=config/extraction_prompt.txt

# Retry settings
EXTRACTOR_MAX_RETRIES=3
EXTRACTOR_RETRY_DELAY_SECONDS=2
